# Database
DATABASE_URL="postgresql://user:password@localhost:5432/payment_reconciliation"

# Server
PORT=3001
CORS_ORIGIN="http://localhost:8080"

# Zoho CRM OAuth2
# Get Client ID & Secret from https://api-console.zoho.eu/
# Generate refresh token with scopes: ZohoCRM.modules.ALL,ZohoCRM.settings.ALL,ZohoCRM.coql.READ,ZohoCRM.org.READ
# Use Access Type: Offline, comma-separated scopes (no spaces)
ZOHO_CLIENT_ID="your_zoho_client_id"
ZOHO_CLIENT_SECRET="your_zoho_client_secret"
ZOHO_REFRESH_TOKEN="your_zoho_refresh_token"
ZOHO_ACCOUNTS_URL="https://accounts.zoho.eu"
ZOHO_API_DOMAIN="https://www.zohoapis.eu"

# Azure OpenAI (for AI-powered CSV column mapping)
# Create a resource at https://portal.azure.com â†’ Azure OpenAI
